{
    "kind": "collectionType",
    "collectionName": "companies",
    "info": {
        "singularName": "company",
        "pluralName": "companies",
        "displayName": "Company",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "city": {
            "type": "string",
            "required": true
        },
        "logo": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "website": {
            "type": "string",
            "required": true,
            "regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
        },
        "slogan": {
            "type": "text",
            "required": true,
            "minLength": 10
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        }
    }
}
