{
    "kind": "collectionType",
    "collectionName": "jobs",
    "info": {
        "singularName": "job",
        "pluralName": "jobs",
        "displayName": "Job",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "remoteOk": {
            "type": "boolean",
            "default": false
        },
        "featuredJob": {
            "type": "boolean",
            "default": false
        },
        "datePosted": {
            "type": "datetime",
            "required": true
        },
        "level": {
            "type": "enumeration",
            "enum": [
                "Junior",
                "Mid-level",
                "Senior",
                "Tech-lead"
            ],
            "required": true
        },
        "jobType": {
            "type": "enumeration",
            "enum": [
                "Full-time",
                "Part-time",
                "Contract"
            ],
            "required": true
        },
        "category": {
            "type": "string",
            "required": true,
            "minLength": 3
        },
        "applicationLink": {
            "type": "string",
            "required": true,
            "regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
        },
        "description": {
            "type": "richtext",
            "required": true
        },
        "aboutYou": {
            "type": "richtext"
        },
        "responsibilities": {
            "type": "richtext"
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "remunerationPackage": {
            "type": "richtext"
        }
    }
}
